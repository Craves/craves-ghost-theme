{{! This is the post loop - each post will be output using this markup }}
{{#foreach posts}}
	{{#if featured}}
	<article class="{{post_class}}">
	  <header class="post-header">
	  	<h2 class="post-title"><a href="{{url}}">{{{title}}}</a></h2>
	  	<p class="post-meta">by {{#author}}<a href="{{website}}">{{name}}</a>{{/author}} on <time class="post-date" datetime="{{date format='YYYY-MM-DD'}}">{{date format="DD MMMM YYYY"}}</time></p>
	  	{{!tags prefix=" on "}}
	  </header>
	  <section class="post-excerpt">
	  	<p>{{excerpt words="65"}}</p>
	  	<p><a class="read-more" href="{{url}}">Read more &raquo;</a></p>
	  </section>
  </article>
	{{/if}}
{{/foreach}}

