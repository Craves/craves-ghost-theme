{{!< default}}

{{> header}}

<main class="main" role="main">

{{#post}}
  <article class="{{post_class}}" role="article" itemscope itemtype="http://schema.org/Article">
    <header class="postHeader">
      <h1 class="postTitle" itemprop="headline">{{title}}</h1>
      <p class="postMeta">
        by {{author}} on <time class="postDate" datetime="{{date format="YYYY-MM-DD"}}" itemprop="datePublished">{{date format='dddd DD MMM YYYY'}}</time>
        {{!tags prefix=" on "}}
      </p>
    </header>

    <section class="sectionContent" itemprop="articleBody">
      {{content}}
    </section>

    {{#if tags}}
    {{!--
    <hr>
    <div class="postTags">
      Tags: {{tags separator=" | "}}
    </div>
    <hr>
    --}}
    {{/if}}

    {{#if author}}
    <footer class="postFooter">
