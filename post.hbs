{{!< default}}

{{> header}}

{{> email-list}}

<main class="main" role="main">

{{#post}}
  <article class="{{post_class}}" role="article" itemscope itemtype="http://schema.org/Article">
    <header class="post-header">
      <h1 class="post-title" itemprop="headline">{{title}}</h1>
      <p class="post-meta">
        by {{#author}}<a href="{{website}}">{{name}}</a>{{/author}} on <time class="post-date" datetime="{{date format="YYYY-MM-DD"}}" itemprop="datePublished">{{date format='dddd DD MMM YYYY'}}</time>
        {{!tags prefix=" on "}}
      </p>
    </header>

    <section class="section-content" itemprop="article-body">
      {{content}}
    </section>

    {{#if tags}}
    {{!--
    <hr>
    <div class="post-tags">
      Tags: {{tags separator=" | "}}
    </div>
    <hr>
    --}}
    {{/if}}

    {{#if author}}
    <!--footer class="post-footer">
      <em>Written by</em>
      <address itemscope itemtype="http://schema.org/Person">
        {{#if author.image}}
        <figure class="author-image">
          <a class="img" href="{{url}}" style="background-image: url({{image}})">
            <img src="{{author.image}}" itemprop="image">
            <span class="hidden">{{author.name}}'s Picture</span>
          </a>
        </figure>
        {{/if}}

        <h4 class="author-name">
          <span itemprop="author">{{author.name}}</span>
        </h4>

        {{#if author.website}}
        <div class="author-website"><a href="{{author.website}}" itemprop="url">{{author.website}}</a></div>
        {{/if}}
      </address>

      <div class="author-bio">
        <p>{{author.bio}}</p>
      </div>
    </footer-->
    {{/if}}

    <hr>

    <div class="share-post">
      <h4 class="share">Share this post</h4>
      <a class="share icon-twitter" target="_blank" href="http://twitter.com/share?text={{title}}&url={{url absolute="true"}}" title="Share this post on Twitter">
        {{!-- <span class="hideThis">Twitter</span> --}}
        <img src="../assets/images/icn-twitter@2x.png" height="50px" width="50px">
      </a>
      <a class="share icon-facebook" target="_blank" href="http://www.facebook.com/sharer.php?u={{url absolute="true"}}" title="Share this post on Facebook">
        {{!-- <span class="hideThis">Facebook</span> --}}
        <img src="../assets/images/icn-facebook@2x.png" height="50px" width="50px">
      </a>
    </div>

  </article>
{{/post}}

{{#if pagination}}
  <div class="pagination">
    {{{pagination}}}
  </div>
{{/if}}

</main>

{{> email-list}}

{{> footer}}